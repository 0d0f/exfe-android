<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:background="@drawable/navbar" >

        <Button
            android:id="@+id/nav_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_small_margin"
            android:background="@drawable/btn_back_bg"
            android:text="@string/home"
            android:textColor="@color/gray_8"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/bav_bar_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nav_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/base_small_margin"
            android:background="@drawable/btn_dark_bg"
            android:text="Gather" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/edit_exfee_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question_circle" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="edit title"  
            android:singleLine="true"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/exfee_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@android:color/background_light" >
    </TableLayout>

    <LinearLayout
        android:id="@+id/group_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/group_middle_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/x_rel_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:hint="SomeTime"
                android:shadowColor="@android:color/white"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/cross_important_text_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/x_time_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:hint="Tap here to set time"
                android:shadowColor="@android:color/white"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/cross_minor_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/x_zone"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableLeft="@drawable/timezone_13"
                android:drawablePadding="4dp"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:shadowColor="@android:color/white"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/cross_minor_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/x_addr_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|left"
                android:hint="Somewhere"
                android:maxLines="2"
                android:shadowColor="@android:color/white"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/cross_important_text_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/x_addr_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Tap here to set place"
                android:maxLines="4"
                android:shadowColor="@android:color/white"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/cross_minor_text_color"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp" >

            <ImageView
                android:id="@+id/x_map"
                android:layout_width="128dp"
                android:layout_height="84dp"
                android:paddingBottom="6dp"
                android:paddingLeft="7dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:src="@drawable/map_nil" />

            <ImageView
                android:id="@+id/x_map_frame"
                android:layout_width="128dp"
                android:layout_height="84dp"
                android:src="@drawable/map_framepin"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="none"
        android:maxHeight="300dp"
        android:textColor="@color/cross_minor_text_color"
        android:textSize="13sp"
        android:lines="7"
        android:hint="edit description" />

</LinearLayout>