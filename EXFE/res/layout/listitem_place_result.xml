<?xml version="1.0" encoding="utf-8"?>
<com.exfe.android.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_place_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_place_item_bg"
    android:paddingBottom="0dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="0dp" >

    <TextView
        android:id="@+id/text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:duplicateParentState="true"
        android:gravity="left|center"
        android:singleLine="true"
        android:textColor="@color/place_main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_main"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:singleLine="true"
        android:textColor="@color/place_alt"
        android:textSize="12sp" />

    <Button
        android:id="@+id/edit"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/list_place_edit_btn"
        android:focusable="false" />

</com.exfe.android.view.CheckableRelativeLayout>